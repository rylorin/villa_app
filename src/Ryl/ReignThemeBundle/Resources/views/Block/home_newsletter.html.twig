<section id="subscribe" class="section subscribe">
	<div class="container">
		<div class="row">
			<div class="col-md-4 col-sm-6">
				<div class="subscribe-text">
					<h2>{{ settings.title }}</h2>
					<span>{{ settings.subtitle }}</span>
				</div>
			</div>
			<div class="col-md-8 col-sm-6">
			<!--
				{{ form_start(form, {'class':"subscribe-form", 'id':"subscription-form", 'name':"subscription-form", 'method':"post",
					'action':"{{ path('reign_newsletter') }}", 'data-name':"sonata-ajax", 'data-target':"subscription-response" }) }} -->
				<form class="subscribe-form" id="subscription-form" name="subscription-form" method="post"
					action="{{ path('reign_newsletter') }}" data-name="sonata-ajax" data-target="subscription-response" onsubmit="$('#subscribe-button').prop('disabled', true)">
					<div class="input-group">
						<label class="sr-only" for="subscriber-email">Email address</label>
			            {{ form_widget(form.email, {'horizontal_input_wrapper_class': 'col-lg-12'}) }}
<!-- 						<input name="sonata_demo_form_type_newsletter[email]" type="email" id="subscriber-email"
							class="form-control" placeholder="Enter your email address"
							required="required"> -->
						<span class="input-group-addon">
						<button class="btn btn-dark" id="subscribe-button" type="submit"><i class="glyphicon glyphicon-envelope"></i>&nbsp; {{ 'ryl.reigntheme.block.newsletter.label.submit'|trans({}, 'RylReignThemeBundle') }}</button>
						<!-- 
						<input
							id="subscribe-button" type="submit" class="btn btn-default"
							value="Join">
						 -->	</span>
					</div>
			        {{ form_rest(form) }}
				</form>
<!--				{{ form_end(form) }} -->
				<div id="subscription-response"></div>
				<p class="spam-text">{{ settings.note }}</p>
			</div>
		</div>
	</div>
</section>
<script>
$(document).ready(function() {
    $('#subscribe-button').prop('disabled', true);
    $('#ryl_reigntheme_form_type_newsletter_email').keyup(function() {
       if($(this).val() != '') {
          $('#subscribe-button').prop('disabled', false);
       }
    });
});
$("#subscribe-button").disabled = '';
$("#subscribe-button").enabled = 'enabled';
</script>