{% extends '::base.html.twig' %}

{% block body -%}
    {% include 'SonataCoreBundle:FlashMessage:render.html.twig' %}
    <div class="row">
        <div class="col-lg-12">
            {% sonata_template_box 'This is the view template. Feel free to override it.' %}
        </div>
    </div>
    <!-- Begin sponsor display -->
    <div class="row" itemscope itemtype="http://schema.org/Sponsor">
        {% block product_left %}
            <div class="col-md-8">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 itemprop="name" class="panel-title">{% block product_title %}{{ entity.name }}{% endblock %}</h3>
                    </div>

                    {% block product_properties %}
                        <ul class="list-group">
                            <li class="list-group-item">
                                <span itemprop="description">
                                    {% block product_description_short %}
                                        {{ entity.shortDescription|raw }}<br/>
                                        <a href="#fullDescription">{% trans from "SonataProductBundle" %}product_full_description_link{% endtrans %}</a>
                                    {% endblock %}
                                </span>
                            </li>
                        </ul>
                    {% endblock %}

                    <div class="panel-footer">
                    {% for project in entity.projects %}
                    	<a href="{{ path('project_show', { 'id': project.id }) }}">
                    	{{ project.title }}
                    	</a>
                    {% endfor %}
                    </div>
                </div>
            </div>
        {% endblock %}
        {% block product_right %}
            <div class="col-md-4">
                {% block product_carousel %}
                    <div>
                    	{% thumbnail entity.image, 'large' with {'itemprop':'image', 'class': 'img-rounded img-responsive', 'style': 'margin: 0 10px 10px 0;'} %}
                    </div>
                {% endblock %}
            </div>
        {% endblock %}
    </div>
	{% block product_full_description %}
	    <div class="panel panel-primary">
	        <div class="panel-heading">
	            <h3 class="panel-title"><a id="fullDescription"></a>{% trans from "SonataProductBundle" %}product_full_description{% endtrans %}</h3>
	        </div>
	        <div class="panel-body">
	            {{ entity.rawContent|raw }}
	        </div>
	    </div>
	{% endblock %}
{% endblock %}
