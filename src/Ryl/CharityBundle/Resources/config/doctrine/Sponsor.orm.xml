<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

	<entity repository-class="Ryl\CharityBundle\Entity\SponsorRepository" name="Ryl\CharityBundle\Entity\Sponsor">
    	<id name="id" type="integer" column="id">
      		<generator strategy="AUTO"/>
    	</id>
    	<field name="name"					type="string"	column="name"				length="255"/>
    	<field name="shortDescription"		type="string"	column="shortDescription"	length="255" nullable="true" />
    	<field name="enabled"               type="boolean"  column="enabled"        	default="true" />

        <field name="content"               type="text"     column="content"    		nullable="true" />
        <field name="rawContent"            type="text"     column="raw_content"  		nullable="true" />
        <field name="contentFormatter"      type="string"   column="content_formatter"  nullable="true" />
    	
        <one-to-many field="projects"
            target-entity="Project"
            mapped-by="sponsor" />

        <field name="createdAt"             type="datetime" column="created_at" 		nullable="true" />
        <field name="updatedAt"             type="datetime" column="updated_at" 		nullable="true" />

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="prePersist"/>
            <lifecycle-callback type="preUpdate" method="preUpdate"/>
        </lifecycle-callbacks>
  </entity>

</doctrine-mapping>
