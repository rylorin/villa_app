<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

	<entity repository-class="Ryl\CharityBundle\Entity\ProjectRepository" name="Ryl\CharityBundle\Entity\Project">
    	<id name="id" type="integer" column="id">
      		<generator strategy="AUTO"/>
    	</id>
    	<field name="title"					type="string"	column="title"					length="255" />
    	<field name="abstract"				type="string"	column="abstract"				length="255" />
    	<field name="enabled"				type="boolean"	column="enabled"				default="true" />
        <field name="content"               type="text"     column="content"    			nullable="true" />
        <field name="rawContent"            type="text"     column="raw_content"  			nullable="true" />
        <field name="contentFormatter"      type="string"   column="content_formatter" 		nullable="true" />
    	
        <many-to-one field="sponsor"
            target-entity="Sponsor"
            inversed-by="projects" >
            <join-column
                name="sponsor_id"
                referenced-column-name="id"
            />
        </many-to-one>

        <one-to-many field="donations"
            target-entity="Application\Sonata\ProductBundle\Entity\Donation"
            mapped-by="project" />

        <field name="createdAt"             type="datetime" column="created_at" 			nullable="true" />
        <field name="updatedAt"             type="datetime" column="updated_at" 			nullable="true" />

        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="prePersist"/>
            <lifecycle-callback type="preUpdate" method="preUpdate"/>
        </lifecycle-callbacks>
	</entity>

</doctrine-mapping>
